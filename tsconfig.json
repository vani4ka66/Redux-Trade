{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": [
      "DOM",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2015.promise"
    ],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "components/*": ["src/components/*"],
      "core/*": ["src/core/*"],
      "entry/*": ["src/entry/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
